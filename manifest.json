{
  "manifest_version": 3,
  "name": "Japanese to Vietnamese Translator",
  "version": "1.0.0",
  "description": "Dịch tiếng Nhật sang tiếng Việt và hiển thị hiragana khi bôi đen text",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://localhost:3000/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
