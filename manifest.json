{
  "manifest_version": 3,
  "name": "Japanese to Vietnamese Translator",
  "version": "1.6.0",
  "description": "Dịch tiếng Nhật sang tiếng Việt và hiển thị hiragana khi bôi đen text",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://jp-extension.vercel.app/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}