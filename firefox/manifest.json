{
  "manifest_version": 2,
  "name": "Japanese to Vietnamese Translator",
  "version": "1.7.1",
  "description": "Dịch tiếng Nhật sang tiếng Việt và hiển thị hiragana khi bôi đen text",
  "permissions": [
    "activeTab",
    "storage",
    "https://jp-extension.vercel.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "jp-translator@example.com",
      "strict_min_version": "109.0"
    }
  }
}
